
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcıların yalnızca kendi verilerine erişmesine izin ver.
    // Bu kural, bir kullanıcının /users/{userId} altındaki tüm alt koleksiyonlara
    // (customers, products, orders vb.) erişebilmesini sağlar.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Sohbet geçmişi koleksiyonu için kurallar.
    match /chatHistories/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

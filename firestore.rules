
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check ownership based on the userId field
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Secure all collections by checking the userId field in the document
    match /customers/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /products/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /orders/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /expenses/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /stockAdjustments/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /cashboxHistory/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /suppliers/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /staff/{docId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // For chatHistories, the document ID is the userId
    match /chatHistories/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}

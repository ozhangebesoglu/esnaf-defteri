
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is the owner of the data.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rule for collections where documents are owned by a user via a `userId` field.
    // This applies to all standard data collections like customers, products, orders, etc.
    match /{(customers|products|orders|expenses|stockAdjustments|cashboxHistory|suppliers|staff)}/{docId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Specific rule for the chatHistories collection where the document ID *is* the user's ID.
    // This allows a user to read and write to their own chat history document.
    match /chatHistories/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}

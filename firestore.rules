rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Test Amaçlı: Kimliği doğrulanmış herhangi bir kullanıcının tüm belgelere
    // okuma ve yazma erişimine izin ver.
    // DİKKAT: BU GÜVENLİ DEĞİLDİR VE SADECE TEST İÇİNDİR.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Bir kullanıcının kendi kullanıcı belgesi altındaki tüm alt koleksiyonlara
    // (customers, products, orders, vb.) ve belgelere okuma/yazma izni ver.
    // {document=**} jokeri, bu kuralın tüm alt yollara uygulanmasını sağlar.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // --- CHAT HISTORY RULES ---
    // The document ID is the user's UID.
    match /chatHistories/{userId} {
      allow read, update, delete: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
    }

    // --- DATA COLLECTION RULES ---
    // These rules apply to collections where documents have a 'userId' field for ownership.
    function isOwnerOfExistingDoc() {
      return resource.data.userId == request.auth.uid;
    }
    
    function isOwnerOfNewDoc() {
      return request.resource.data.userId == request.auth.uid;
    }
    
    match /customers/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
    match /products/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
    match /orders/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
    match /expenses/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
    match /stockAdjustments/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
    match /cashboxHistory/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
    match /suppliers/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
    match /staff/{docId} {
      allow read, update, delete: if isSignedIn() && isOwnerOfExistingDoc();
      allow create: if isSignedIn() && isOwnerOfNewDoc();
    }
  }
}